<div class='auth_sheet'>
<h2 class='header'>Sign up</h2>
<%= image_tag 'underline_image.png', alt:'underline', class:'underline'%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder:'Name field' %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'Email field',class: 'entry_field' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder:'Password field', class: 'entry_field' %><br />
    <% if @minimum_password_length %>
    <em class='min_value_password'>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:'Password confirmation', class: 'entry_field' %>
  </div>

  <div class="actions signup_actions">
    <%= f.submit "Signup" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
